<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PeriodicChartView">
        <attr name="valueText" format="string" />
        <attr name="dateText" format="string" />
        <attr name="showText" format="boolean" />
        <attr name="progressColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="chartPadding" format="dimension" />
        <attr name="periodMode" format="enum">
            <enum name="date" value="1" />
            <enum name="hour" value="2" />
        </attr>
        <attr name="dateInterval" format="enum">
            <enum name="day" value="1" />
            <enum name="week" value="2" />
            <enum name="month" value="3" />
            <enum name="hour" value="4" />
        </attr>
    </declare-styleable>
</resources>